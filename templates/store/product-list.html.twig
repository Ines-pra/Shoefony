{% extends 'layout.html.twig' %}
    {% block content %}
            <div class="row">
				<div class="col-md-3">
					<p class="lead">Nos marques</p>
					<div class="list-group">
						<a href="#" class="list-group-item active">Toutes les marques</a>
						{% for brand in brands %}
						<a href="#" class="list-group-item">{{brand.name|capitalize}}</a>
						{% endfor %}
					</div>
				</div>

                <div class="col-md-9">
                <p class="lead">Nos produits " Toutes les marques "</p>
                <div class="row text-center">
                    {% for product in products %}						
						<div class="col-md-4 col-sm-6 hero-feature">
							<div class="thumbnail">
									<img src="{{ asset( product.image.url ) }}" alt="{{ product.image.alt }}" style="width: 100%; border-radius:10px;" >
								<div class="caption">
									<h3> {{ product.name }} </h3>
									<p>{{ product.description }}</p>
									<p>
										<span class="badge">{{ product.price }}€</span>
										<a href=" {{ asset('/store/product/' ~ product.id ~ '/details/' ~ product.slug ~ '') }}" class="btn btn-default">Voir la fiche</a>
									</p>
								</div>
							</div>
						</div> 
                    {% endfor %}
                

				

					<div class="row text-center">
						<nav>
							<ul class="pagination pagination-lg">
								<li>
									<a href="#" aria-label="Précédent">
										<span aria-hidden="true">&laquo;</span>
									</a>
								</li>
								<li class="active">
									<a href="#">1</a>
								</li>
								<li>
									<a href="#">2</a>
								</li>
								<li>
									<a href="#">3</a>
								</li>
								<li>
									<a href="#">4</a>
								</li>
								<li>
									<a href="#">5</a>
								</li>
								<li>
									<a href="#" aria-label="Suivant">
										<span aria-hidden="true">&raquo;</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</div>

            <hr/>

{% endblock %}